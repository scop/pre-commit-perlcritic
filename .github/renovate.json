{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>scop/common"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.pre-commit-hooks\\.yaml$/",
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\b(Perl-Critic-|rev: v)(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)[-.]"
      ],
      "depNameTemplate": "Perl::Critic",
      "datasourceTemplate": "cpan"
    }
  ]
}
